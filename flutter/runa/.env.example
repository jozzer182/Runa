# Configuración de la Aplicación Runa

# Configuración de la Aplicación
APP_NAME=Runa
APP_VERSION=1.0.0
APP_DESCRIPTION=Aplicación de frases motivacionales

# Configuración de Firebase (para futuro uso)
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_API_KEY=your_api_key

# Configuración de Gemini AI (para futuro uso)
# GEMINI_API_KEY=your_gemini_api_key

# Configuración de la Base de Datos
DATABASE_NAME=runa_realm.db
INITIAL_PHRASES_COUNT=30

# Configuración de la UI
DEFAULT_THEME=light
ANIMATION_DURATION=800
PHRASE_REFRESH_INTERVAL=24

# Configuración de Notificaciones (futuro)
# ENABLE_NOTIFICATIONS=true
# NOTIFICATION_TIME=09:00

# Configuración de Debug
DEBUG_MODE=true
VERBOSE_LOGGING=true
